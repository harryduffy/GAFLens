datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Manager {
  id           Int     @id @default(autoincrement())
  managerName  String
  funds        Fund[]
}

model Fund {
  id               Int     @id @default(autoincrement())
  name             String
  strategy         String
  assetClass       String
  targetNetReturn  Int
  geographicFocus  String
  size             BigInt
  currency         String
  region           String

  managerId        Int
  manager          Manager @relation(fields: [managerId], references: [id])
}

model ManagerMeetingDetail {
  id                 Int      @id @default(autoincrement())
  managerName        String
  managerCountry     String
  meetingDate        DateTime
  fundName           String
  fundSize           BigInt
  assetClasses       String
  investmentStrategies String
  fundGeographicFocus String
  fundTargetNetReturn Int
  gafAttendees       String
  externalAttendees  String
  notes              String
}


